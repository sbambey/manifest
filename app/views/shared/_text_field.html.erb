<% errors = f.object.errors.full_messages_for(attribute) %>
<%= content_tag :div, class: ["form-group", ("has-error has-feedback" if errors.present?)] do %>
	<%= f.label attribute, "#{args[:label_text] || nil}", class: "#{args[:label_class] || "sr-only"}" %>
	<%= f.text_field attribute, class: "#{args[:field_class] || "form-control"}", id: "#{args[:field_id] || ""}",
		placeholder: "#{args[:placeholder] || attribute.to_s.humanize}" %>

	<% if errors.present? %>
		<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
		<span class="error-explanation">
	    <%= errors.first %>
	  </span>
	<% end %>
<% end %>