<fieldset class="add-image-tile">

	<div class="row">
		<% if f.object.file.present? %>
			<div class="col-xs-6 col-md-2">
				<%= image_tag f.object.file.url(:thumb), class: "extra-small-image" %>
			</div>
		<% end %>
		<div class="col-xs-6 col-md-10">
			<div class="form-group">
				<%= f.label :file %> 
				<%= f.file_field :file %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12 col-md-4">
			<%= render "shared/text_field", f: f, attribute: :description, args: {label_class: ""} %>
		</div>
		<div class="col-xs-12 col-md-4">
			<%= render "shared/text_field", f: f, attribute: :source_name, args: {label_class: ""} %>
		</div>
		<div class="col-xs-12 col-md-4">
			<%= render "shared/text_field", f: f, attribute: :source_link, args: {label_class: ""} %>
		</div>
	</div>

	<%= f.hidden_field :_destroy %>

	<%= link_to "[-] Remove this image", '#', class: "remove_fields btn btn-danger btn-xs" %>
</fieldset>